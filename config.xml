<?xml version='1.0' encoding='utf-8'?>
<widget id="net.steinbring.PocketSteinbring" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PocketSteinbring</name>
    <description>
        Everything you need to know from Joe Steinbring.
    </description>
    <author email="joe@steinbring.net" href="http://steinbring.net">
        Joe Steinbring
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="img/FlipFace-Joe-Small.png" />
</widget>
